#!/bin/bash

time= date
echo $time

for ((var = 0 ; var < 360 ; var++))
do
	BatPer=$(upower -d | grep -E "percentage: " | grep -m 1 -Eo '[0-9]{1,3}')
	LightLF=$(light -G)
	LightLI=${LightLF%.*}
	echo $LightL
	if (( $BatPer <= $LightLI | bc)); then
		light -S $BatPer
	elif (( $BatPer > $LightLI | bc)); then
		light -A .2
	fi
	progress=$var/1920
	echo $progress
	sleep 15s
	#var=$(( $var + 1))
done
